{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch executable (gdb)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/think_like_a_programmer",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "preLaunchTask": "Make: build",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}